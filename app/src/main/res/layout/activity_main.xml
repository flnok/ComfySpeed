<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <View
        android:id="@+id/view_main_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#34495E"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <View
        android:id="@+id/view_main_botton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#95A5A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_main_top"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_main_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comfy Speed"
        android:textColor="#E74C3C"
        android:textSize="36sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="@+id/view_main_top"
        app:layout_constraintEnd_toEndOf="@+id/view_main_top"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/tv_main_description"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Comfy management and speed your business"
        android:textColor="#1B9172"
        app:fontFamily="sans-serif-smallcaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_appname" />

    <Button
        android:id="@+id/button_main_create"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E8ECEE"
        android:text="Create Account"
        android:textColor="#E61120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_main_botton"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_max="360dp" />

    <Button
        android:id="@+id/button_main_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EE2B2A"
        android:text="Sign In"
        android:textColor="#E3E7EA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_create"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintWidth_max="360dp" />

</androidx.constraintlayout.widget.ConstraintLayout>